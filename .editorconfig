root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{sh,py,pyi,js,ts,json,xml,css,md,markdown,handlebars,html}]
indent_style = space
indent_size = 4

[*.cfg]
indent_style = space
indent_size = 8

[*.{yml,yaml}]
indent_style = space
indent_size = 2
